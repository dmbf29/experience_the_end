  <div class="row">
    <%= render 'filters' %>
  </div>
  <div class="row gx-0 gy-0">
    <div class="col col-md-6 p-4">
      <h2 class="mt-5"><%= pluralize(@experiences.length, 'near-death experience') %></h2>
      <hr>
      <div id="experiences" class="mt-5 d-grid gap-3">
