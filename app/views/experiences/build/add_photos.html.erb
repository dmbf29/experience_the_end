<div class="row">
  <div class="col-3" id="sticky-sidebar">
    <div class="sticky-top">
      <%= render 'sidebar' %>
    </div>
  </div>
  <div class="col py-3 ps-sm-0" id="main">
    <%= simple_form_for @experience, url: wizard_path, method: :put do |f| %>
      <div class="container">
        <div class="row justify-content-center mt-3">
          <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h2 class="mt-2">Add your photos</h2>
            <p class="mt-5">We will review every photo before it goes live on your experience page.</p>
            <div class="photo-form-box">
              <%= f.input :photos, as: :file, input_html: { multiple: true }, label: false %>
            </div>
          </div>
        </div>
      </div>
      <%= render 'bottom_navbar', f: f %>
    <% end %>
  </div>
</div>
