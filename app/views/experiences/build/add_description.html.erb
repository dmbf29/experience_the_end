<div class="row">
  <div class="col-3" id="sticky-sidebar">
    <div class="sticky-top">
      <%= render 'sidebar' %>
    </div>
  </div>
  <div class="col py-3 ps-sm-0" id="main">
    <%= simple_form_for @experience, url: wizard_path, method: :put do |f| %>
      <div class="container">
        <div class="row justify-content-center mt-3">
          <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h2 class="mt-2">Let's describe your experience</h2>
            <p class="mt-5"><strong>What will you and your guests do?</strong></p>
            <ul>
              <li>Provide specific plans from start to finish, not multiple ideas or options</li>
              <li>Describe what makes your experience specialâ€”something that guests would not do on their own</li>
            </ul>
            <%= f.input :description, as: :text, input_html: { rows: 10 }, html5: true, label: false, placeholder: "Tell guests the story they'll do during the experience" %>
          </div>
        </div>
      </div>
      <%= render 'bottom_navbar', f: f %>
    <% end %>
  </div>
</div>
