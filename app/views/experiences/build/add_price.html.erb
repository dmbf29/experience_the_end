<div class="row">
  <div class="col-3" id="sticky-sidebar">
    <div class="sticky-top">
      <%= render 'sidebar' %>
    </div>
  </div>
  <div class="col py-3 px-2 px-sm-0" id="main">
    <%= simple_form_for @experience, url: wizard_path, method: :put do |f| %>
      <div class="container">
        <div class="row justify-content-center mt-3">
          <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h2 class="mt-2">How much per person?</h2>
            <p class="mt-5">Make sure you include all the fees.</p>
            <div class="d-flex">
              <blockquote class="btn-dark form-control radius-none-right" style="width: 36px">Â¥</blockquote>
              <%= f.input :price, as: :integer, input_html: { class: 'radius-none-left' }, html5: true, label: false, placeholder: "5,000" %>
            </div>
          </div>
        </div>
      </div>
      <%= render 'bottom_navbar', f: f %>
    <% end %>
  </div>
</div>
