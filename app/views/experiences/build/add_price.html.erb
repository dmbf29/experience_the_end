<%= simple_form_for @experience, url: wizard_path, method: :put do |f| %>
  <div class="container">
    <div class="row justify-content-center mt-3">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        <h2 class="mt-2">How much do you charge for your experience?</h2>
        <p class="mt-5">Make sure you include all the fees. You can always specify additional fees later.  </p>
        <%= f.input :price, as: :integer, input_html: { rows: 6 }, html5: true, label: false, placeholder: "5000 JPY" %>
      </div>
    </div>
  </div>
  <%= render 'footer', f: f %>
<% end %>
