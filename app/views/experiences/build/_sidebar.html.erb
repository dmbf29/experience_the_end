<div class="container-fluid">
  <div class="d-flex justify-content-between pt-5">
    <i class="fas fa-skull-crossbones text-primary"></i>
    <a class="text-muted" href="/experiences"><small><u>Save and exit</u></small></a>
  </div>
  <h3 class="mt-5">Submit your<br>
    experience</h3>
  <div class="d-flex mt-5">
    <ul class="nav nav-sm flex-column">
      <li class="d-flex justify-content-between">
        <a class="nav-link me-5" href="/experiences/<%= @experience.id %>/build/add_name">Time and duration</a>
        <% if @experience.name && @experience.start_time && @experience.end_time %>
          <i class="fas fa-check-circle my-auto"></i>
        <% end %>
      </li>
      <li class="nav-item d-flex justify-content-between">
        <a class="nav-link" href="/experiences/<%= @experience.id %>/build/add_description">What we'll do</a>
        <% if @experience.description %>
          <i class="fas fa-check-circle my-auto"></i>
        <% end %>
      </li>
      <li class="nav-item d-flex justify-content-between">
        <a class="nav-link" href="/experiences/<%= @experience.id %>/build/add_price">How much</a>
        <% if @experience.price %>
          <i class="fas fa-check-circle my-auto"></i>
        <% end %>
      </li>
      <li class="nav-item d-flex justify-content-between">
        <a class="nav-link" href="/experiences/<%= @experience.id %>/build/add_address">Where we'll do</a>
        <% if @experience.address %>
          <i class="fas fa-check-circle my-auto"></i>
        <% end %>
      </li>
      <li class="nav-item d-flex justify-content-between">
        <a class="nav-link" href="/experiences/<%= @experience.id %>/build/add_photos">Pictures</a>
        <% if @experience.photos[0] %>
          <i class="fas fa-check-circle my-auto"></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
