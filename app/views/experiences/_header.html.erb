<%# TODO: Replace this with real categories when tagged %>
<div class="row">
  <div class="d-flex align-items-center fw-lighter my-4">
    <small class="me-2"><%= link_to "Tokyo, Japan", experiences_path(address: experience.address), class: 'text-dark' %></small>
    <small class="me-2"> > </small>
    <small class="me-2"><%= link_to "Sports", experiences_path(category: ''), class: 'text-dark' %></small>
  </div>
</div>
<div class="row">
  <h2><%= experience.name %></h2>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div class="d-flex align-items-center">
      <div class="d-flex align-items-center">
        <%= render 'reviews/details', experience: experience %>
      </div>
      <div class="ms-3">
        <i class="fas fa-map-pin mr-1 text-primary"></i>
        <small><%= experience.address %></small>
      </div>
    </div>
    <div class="d-flex align-items-center">
      <%# TODO: These should be links %>
      <div class="ms-3 btn btn-light">
        <i class="fas fa-share-square"></i>
        <small>Share</small>
      </div>
      <div class="ms-3 btn btn-light">
        <i class="fas fa-heart"></i>
        <small>Save</small>
      </div>
    </div>
  </div>
</div>
